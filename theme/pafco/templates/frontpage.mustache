{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> theme_pafco/ccn_preloader }}
<div class="wrapper" id="page-content">
    {{> theme_pafco/ccn_mdl_400/navbar }}
    <div id="ccn-page-wrapper">
        <div id="ccnSettingsMenuContainer">
            <div id="ccnSettingsMenuInner">{{! @ccnIrrevocable: These container divs #ccnSettingsMenuContainer/Inner must exist unconditionally, only contents can be conditional }}
                {{#show_settings_controls}}
                    {{#hasregionmainsettingsmenu}}
                        <div id="region-main-settings-menu" class="d-print-none {{#hasblocks}}has-blocks{{/hasblocks}}">
                            <div> {{{ output.region_main_settings_menu }}} </div>
                        </div>
                    {{/hasregionmainsettingsmenu}}
                {{/show_settings_controls}}
            </div>
        </div>
        {{{ output.standard_top_of_body_html }}}
        <div>
            {{{ output.full_header }}}


            <div id="ccn-main-region">
                <section id="banner" class="hero-container pt-5">
                    <div class="row align-items-center justify-content-center h-100">
                        <div class="d-flex justify-content-center align-items-center col-md-6 col-12">
                            <img src="{{bannerimage}}" class="w-100" style="max-width: 600px">
                        </div>
                        <div class="d-flex justify-content-center align-items-center flex-column col-md-6 col-12">
                            <img src="{{bannerlogo}}" class="w-100" style="max-width: 150px;">

                            <span class="shadowy-text text--title text-center px-2">
                                 {{^bannertext}}
                                     {{#str}}university, theme_pafco{{/str}}
                                 {{/bannertext}}
                                {{whatistitle}}


                            </span>
                            {{#notloggedin}}
                                <a href="/login" class="mt-3 btn btn-primary"
                                   style="width: 350px;">
                                    <i aria-hidden="true" class="fa fa-user"></i>
                                    {{#str}}login_btn, theme_pafco{{/str}}
                                </a>
                            {{/notloggedin}}
                            {{#isloggedin}}
                                <a href="/my" class="mt-3 btn btn-primary"
                                   style="width: 350px;">
                                    <i aria-hidden="true" class="fa fa-user"></i>
                                    {{#str}}mymoodle, my{{/str}}
                                </a>
                            {{/isloggedin}}
                            <a href="/user/contactsitesupport.php" class="mt-3 btn btn-secondary btn-outline-primary" style="width: 350px;">

                                <i aria-hidden="true" class="fa fa-envelope-o"></i>
                                {{#str}}contact_support, theme_pafco{{/str}}

                            </a>


                        </div>
                    </div>
                </section>
                {{^no_news}}
                    <section id="blog" class="pt-5 px-md-2">
                        <div class="moove-container-fluid">
                            <div class="row align-items-end">
                                <div class="p-0 col-sm-9 col-md-11 col-12">
                                    <div class="liner mt-4">
                                        <h3 class="mx-1 shadowy-text font--20 text-center">
                                            {{#str}}blog_title, theme_pafco{{/str}}
                                        </h3></div>
                                </div>
                                <div class="pa-0 col-sm-3 col-md-1 col-12">
                                    <a href="/blog/index.php" class="px-2 mt-3 font-weight-bold btn view-all" style="height: auto;">
                                        <div class="v-btn__content">
                                            <span class="flex-shrink-0">{{#str}}view_all, theme_pafco{{/str}}</span>
                                            <i aria-hidden="true" class="fa fa-arrow-left ml-2"></i>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="row justify-content-center align-items-stretch">
                                {{#news}}
                                    <div class="col-sm-6 col-lg-4 col-12 mb-2">
                                        <a href="/blog/index.php?entryid={{id}}"
                                        class="mx-auto py-2 px-4 v-card v-card--link v-sheet theme--light" style="position: relative;">
                                        <div class="row justify-center">
                                            <div class="d-none d-sm-flex col-md-5 col-12">
                                                <div class="v-avatar my-4 mx-auto rounded-0" style="height: 120px; min-width: 120px; width: 120px;">
                                                    <img src="{{config.wwwroot}}/theme/pafco/pix/news.png" class="w-100">
                                                </div>
                                            </div>
                                            <div class="align-items-center col-12 col-md-6 d-flex mb-5">
                                                <div class="mt-3">
                                                    <h3 class="mt-3 text-justify" style="line-height: 1.5rem;font-size: 1rem">
                                                        {{subject}}
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        </a>
                                    </div>
                                {{/news}}
                            </div>
                        </div>
                    </section>
                {{/no_news}}
                <section id="navid" class="pt-5 px-md-2">
                    <div class="moove-container-fluid">
                        <div class="row align-items-end">
                            <div class="p-0 col-12">
                                <div class="liner mt-4">
                                    <h3 class="mx-1 shadowy-text font--20 text-center">
                                        {{^whatistitle}}
                                            {{#str}}whatistitle_default,theme_pafco{{/str}}
                                        {{/whatistitle}}
                                        {{whatistitle}}
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center align-items-stretch">
                            <div class="col-md-4 col-lg-6 col-12 py-2">
                                <div class="text-justify" style="line-height: 1.75rem;">
                                    {{^whatsiscontent}}
                                        {{#str}}whatsiscontent_default,theme_pafco{{/str}}
                                    {{/whatsiscontent}}
                                    {{{whatsiscontent}}}

                                </div>

                            </div>
                            <div class="order-first order-md-last col-md-8 col-lg-6 col-12 py-2">
                                <div class="d-flex justify-content-center">
                                    <div class="stand d-flex flex-column align-items-center" style="--right-before:185px; --right-after:110px;">
                                        <div class="monitor">
                                            <video controls="controls" poster="{{videoposter}}">
                                                <source src="{{videofile}}" type="video/mp4">
                                            </video>
                                        </div>
                                        <div class="stand1"></div>
                                        <div class="stand2"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                {{#numbersfrontpage}}
                    <section id="numbers">
                        <div class="moove-container-fluid">
                            <div class="row user-rating-box-area">
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-8 mb-3">
                                    <div class="h-100 rate-box bg-students">
                                        <h3>
                                            {{{numbersusers}}}
                                        </h3>
                                        <p>{{#str}}numbersusers, theme_pafco{{/str}}</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-8 mb-3">
                                    <div class="h-100 rate-box rate-box-2 bg-teachers">
                                        <h3>
                                            {{{numbersteachers}}}
                                        </h3>
                                        <p>{{#str}}numbersteachers, theme_pafco{{/str}}</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-8 mb-3">
                                    <div class="h-100 rate-box rate-box-2 bg-contents">
                                        <h3>
                                            {{{numbersactivties}}}
                                        </h3>
                                        <p>{{#str}}numbersactivties, theme_pafco{{/str}}</p>
                                    </div>

                                </div>
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-8 mb-3">
                                    <div class="h-100 rate-box rate-box-2 bg-courses">
                                        <h3>
                                            {{{numberscourses}}}
                                        </h3>
                                        <p>{{#str}}numberscourses, theme_pafco{{/str}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                {{/numbersfrontpage}}

                <div class="container {{^showmoodlefirstpage}}d-none{{/showmoodlefirstpage}}">
                    <div class="d-print-block main-inner">
                        <div id="region-main" aria-label="{{#str}}content{{/str}}">
                            <div id="ccn-main">
                                {{{ output.main_content }}}
                            </div>
                        </div>
                    </div>
                </div>

                {{#faqenabled}}
                    <section id="faq" class="scale-up scale-up-show">
                        <div class="moove-container-fluid">
                            <h2>{{#str}}faq, theme_pafco{{/str}}</h2>

                            <div class="accordion" id="accordionFaq">
                                {{#faq}}
                                    <div class="card shadow">
                                        <div class="card-header" id="heading-{{{id}}}">
                                            <h2 class="mb-0">
                                                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse-{{{id}}}"
                                                        aria-expanded="false"
                                                        aria-controls="collapse-{{{id}}}">
                                                    {{{question}}}
                                                </button>
                                            </h2>
                                        </div>

                                        <div id="collapse-{{{id}}}" class="collapse" aria-labelledby="heading-{{{id}}}" data-parent="#accordionFaq">
                                            <div class="card-body">
                                                {{{answer}}}
                                            </div>
                                        </div>
                                    </div>
                                {{/faq}}
                            </div>
                        </div>
                    </section>
                {{/faqenabled}}

            </div>
            {{{ blocks_fullwidth_bottom }}}
        </div>
    </div>
    {{> theme_pafco/ccn_mdl_400/footer }}
</div>
{{{ output.standard_after_main_region_html }}}
{{> theme_pafco/ccn_modals }}
</body>

</html>
{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
    });
    M.util.js_pending('theme_boost/drawer');
    require(['theme_boost/drawer'], function(mod) {
    mod.init();
    M.util.js_complete('theme_boost/drawer');
    });
{{/js}}
